<html>
    <head>
        <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

        <link type="text/css" rel="stylesheet" href="/Scripts/jsgrid.min.css" />
        <link type="text/css" rel="stylesheet" href="/Scripts/jsgrid-theme.min.css" />
        <script type="text/javascript" src="/Scripts/jsgrid.min.js"></script>

        <script>
            $("#jsGrid").jsGrid({
                width: "100%",
                height: "400px",

                inserting: true,
                editing: true,
                sorting: true,
                paging: true,
                autoload: true,
                // this seems to be the advised approach for loading data asynchronously, but it is not yet working
                controller: {
                    loadData: function (filter) {
                        return $.ajax({
                            type: "GET",
                            url: "/api/Product",
                            dataType: "json"
                        });
                    }
                    // at this point would have added insertData() 
                },
                fields: [
                    { name: "Name", type: "text", title: "Name", width: 150 },
                    { name: "ProductNumber", type: "number", title: "Product Number", width: 50 },
                    { name: "Color", type: "text", width: 75, title: "Color" },
                    { name: "SafetyStockLevel", type: "number", title: "Safety Stock Level", width: 50 },
                    { name: "ReorderPoint", type: "number", title: "Reorder Point", sorting: true },
                    { name: "StandardCost", type: "number", title: "Standard Cost", sorting: true },
                    { name: "ListPrice", type: "number", title: "List Price", sorting: true },
                    { type: "control" }
                ]
            });
        </script>
    </head>
    <body>
        <div>
            <div id="jsGrid"></div>
        </div>
    </body>


</html>
